  
{
    "name": "JoyKey",
    "version": "1.1",
    "description": "Map button presses from the Javascript Gamepad API to KeyboardEvents.",
    "permissions": [
      "activeTab"
    ],
    "background": {
      "scripts": ["/src/background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "Open layout editor",
      "default_popup": "panel.html",
      "default_icon": {
        "16": "/src/img/joyride-icon-16.png",
        "32": "/src/img/joyride-icon-32.png",
        "48": "/src/img/joyride-icon-48.png",
        "128": "/src/img/joyride-icon-128.png"
      }
    },
    "icons": {
      "16": "/src/img/joyride-icon-16.png",
      "32": "/src/img/joyride-icon-32.png",
      "48": "/src/img/joyride-icon-48.png",
      "128": "/src/img/joyride-icon-128.png"
    },
    "manifest_version": 2
  }